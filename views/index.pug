extends layout

block content
  if user
    a(href="/logout", class="btn btn-link") Salir

  div(class="container")
    div(class="row")
      div(class="col")
        table(class="table table-hover")
          thead(class="thead-dark")
            tr
              th Name
              th Email
          tbody
            each user in users
              tr
                td= user.name
                td= user.email